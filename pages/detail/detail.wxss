/* pages/detail/detail.wxss */
.title{
  display: block;
  text-align: center;
  font-size: 50rpx;
  font-weight: 500;
  margin: 10rpx 0;
}

scroll-view{
  width: 100%;
  height: 100vh;
}

swiper{
  width: 96%;
  height: 490rpx;
  margin: 0 16rpx;
}

swiper video,image{
  width: 100%;
  border-radius: 16rpx;
}

.info{
  width: 96%;
  margin: 0 16rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: rgb(250,105,226);
}

.info text{
  font-size: 40rpx;
  color: white;
  line-height: 80rpx;
}

.wrap{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wrap image{
  width: 90%;
}

.bottom{
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: rgb(250,105,226);
}

.bottom button{
  color: white;
  width: 50%;
  background-color: rgb(250,105,226);
}