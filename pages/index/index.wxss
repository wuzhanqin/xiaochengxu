/* pages/index/index.wxss */
.container{
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 10rpx 16rpx;
}

.container swiper{
  width: 100%;
  height: 370rpx;
}

swiper image{
  width: 100%;
  border-radius: 16rpx;
}

swiper swiper_item{
  width: 100%;
}

.nav{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background-color: pink;
  border-radius: 16rpx;
  justify-content: space-around;
}

.nav .menu{
  display: flex;
  flex-direction: column;
  width: 25%;
  margin-bottom: 10rpx;
  align-items: center;
  justify-content: center;
}

.menu text{
  font-size: 20rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.menu image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.search{
  height: 80rpx;
  border-radius: 16rpx;
  border: 3rpx solid #961111;
  padding-left: 10rpx;
  margin-bottom: 10rpx;
}

.hot{
  display: block;
  text-align: center;
  margin: 10rpx 0;
}

.wrap{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background: #576b95;
}

.wrap .product{
  width: 46%;
  display: flex;
  flex-direction: column;
  margin: 6rpx 10rpx;
  background-color: #666;
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}

.wrap image{
  width: 100%;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.info{
 display: flex;
 flex-direction: row;
 justify-content: space-around; 
}

.name{
  color: white;
}

.info .price{
  color: red;
}