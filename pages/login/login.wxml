<!--pages/login/login.wxml-->
<view class="container">
  <text>清晰秋末商城</text>
  <input type="number" bindinput="inputPhone" class="phone_number" placeholder="请输入手机号码" bindblur="getPhone" value="{{phone_number}}"></input>
  <view class="code">
    <input bindblur="getCode" class="code_number" placeholder="请输入验证码"></input>
    <button class="btn_code">获取验证码</button>
  </view>
  <view>
    <button bindtap="login" class="btn_login">商城登录</button>
  </view>
</view>